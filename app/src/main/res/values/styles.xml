<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Root">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="AppTheme.NavigationStyle">
        <item name="android:layout_width">@dimen/navigation_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="paddingStart">@dimen/padding_standard</item>
        <item name="paddingEnd">@dimen/padding_standard</item>
    </style>

    <style name="AppThemeOverlay.ToolbarRed" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="AppTheme.ListView" parent="Base.Widget.AppCompat.ListView">
        <item name="android:paddingEnd">@dimen/content_padding</item>
        <item name="android:paddingRight">@dimen/content_padding</item>
        <item name="android:paddingStart">@dimen/content_padding</item>
        <item name="android:paddingLeft">@dimen/content_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:divider">@null</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <style name="AppTheme.ListItem" parent="Base.Widget.AppCompat.ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:minHeight">@dimen/listItem_height</item>
        <item name="android:paddingEnd">@dimen/listItem_horizontal_padding</item>
        <item name="android:paddingLeft">@dimen/listItem_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/listItem_horizontal_padding</item>
        <item name="android:paddingStart">@dimen/listItem_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/listItem_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/listItem_vertical_padding</item>
    </style>

    <!--FONT-->
    <style name="AppTheme.TextAppearance" parent="@android:style/TextAppearance.Theme">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:text">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>


</resources>
