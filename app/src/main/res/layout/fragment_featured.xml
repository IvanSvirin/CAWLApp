<?xml version="1.0" encoding="utf-8"?><android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/coordinator_layout"    style="@style/AppTheme.Root"    android:background="@color/white">    <android.support.design.widget.AppBarLayout        android:id="@+id/appbar_layout"        style="@style/AppTheme.Root"        android:layout_height="@dimen/app_bar_height"        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"        app:elevation="@dimen/zero_dp">        <android.support.design.widget.CollapsingToolbarLayout            android:id="@+id/collapsing_toolbar"            android:layout_width="match_parent"            android:layout_height="@dimen/carousel_collapsing_toolbar_height"            android:elevation="@dimen/toolbar_elevation"            android:fitsSystemWindows="true"            app:contentScrim="@color/colorPrimary"            app:layout_scrollFlags="scroll|exitUntilCollapsed"            app:titleEnabled="false">            <FrameLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                app:layout_collapseMode="parallax"                app:layout_scrollFlags="scroll|enterAlwaysCollapsed">                <com.daimajia.slider.library.SliderLayout                    android:id="@+id/fragment_feature_carousel_viewpager"                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:background="@android:color/transparent"                    android:gravity="center"                    android:tint="@color/gray"                    android:visibility="visible"                    app:indicator_visibility="invisible"                    app:layout_collapseMode="parallax" />            </FrameLayout>            <android.support.v7.widget.Toolbar                android:id="@+id/toolbar"                android:layout_width="match_parent"                android:layout_height="@dimen/toolbar_height"                android:background="@android:color/transparent"                app:layout_collapseMode="pin"                app:popupTheme="@style/AppThemeOverlay.ToolbarRed" />        </android.support.design.widget.CollapsingToolbarLayout>        <android.support.design.widget.TabLayout            android:id="@+id/fragment_feature_tab_layout"            android:layout_width="match_parent"            android:layout_height="@dimen/tabLayout_height"            android:background="?attr/colorPrimary"            android:visibility="visible"            app:tabGravity="fill"            app:tabIndicatorColor="@color/white"            app:tabMaxWidth="0dp"            app:tabMode="fixed"            app:tabSelectedTextColor="@color/white"            app:tabTextColor="@color/white" />    </android.support.design.widget.AppBarLayout>    <com.cawlapp.cawlapp.presentation.view.components.FixedNestedScrollView        android:id="@+id/nested_scroll"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:fillViewport="true"        app:layout_behavior="@string/appbar_scrolling_view_behavior">        <LinearLayout            android:id="@+id/child_of_nested"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="vertical"            android:visibility="visible">            <android.support.v4.view.ViewPager                android:id="@+id/fragment_feature_pager"                android:layout_width="match_parent"                android:layout_height="match_parent" />        </LinearLayout>    </com.cawlapp.cawlapp.presentation.view.components.FixedNestedScrollView></android.support.design.widget.CoordinatorLayout>